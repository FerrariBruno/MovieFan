<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="344dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/filter_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="24dp"
        android:text="@string/filter_view.title"
        tools:text="Filter results"
        style="@style/MovieFanTitleText"
        />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="81dp"
        android:text="@string/filter_view.genre"
        tools:text="Genre"
        style="@style/FilterTitleText"
        />

    <Spinner
        android:id="@+id/genre_spinner"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:background="@null"
        android:layout_marginStart="310dp"
        android:layout_marginTop="81dp"
        />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="141dp"
        android:text="@string/filter_view.year"
        tools:text="Year"
        style="@style/FilterTitleText"
        />

    <Spinner
        android:id="@+id/year_number_picker"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:background="@null"
        android:layout_marginStart="310dp"
        android:layout_marginTop="143dp"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/adult_content_switch"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:text="@string/filter_view.adult_content"
        style="@style/FilterSpinner"
        tools:text="Display adult content"
        />

    <Button
        android:id="@+id/apply_filters"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="271dp"
        android:text="@string/apply"
        android:textAllCaps="false"
        tools:text="Apply"
        style="@style/FilterButton"
        />

    <TextView
        android:id="@+id/clear_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="280dp"
        android:text="@string/filter_view.clear_filters"
        tools:text="Clear filters"
        style="@style/ClearFilterText"
        />

</FrameLayout>