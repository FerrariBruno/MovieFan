<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:orientation="horizontal"
    >

    <com.xmartlabs.moviefan.ui.common.MovieFanImageView
        android:id="@+id/poster"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/poster_description"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_launcher_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="15dp"
            tools:text="2001: a space odyssey"
            style="@style/MovieFanTitleText"
            />

        <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            tools:text="Sci-Fi, Drama"
            style="@style/GreyedFilmData"
            />

        <TextView
            android:id="@+id/popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="15dp"
            tools:text="Popularity: 8.12"
            style="@style/GreyedFilmData"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginStart="15dp"
            android:maxLines="4"
            tools:text="One of the best from Kubrick, a man embarcs on an epic journey lorem ipsum the thig is that theâ€¦ "
            style="@style/FilmDescription"
            />

    </LinearLayout>

</LinearLayout>
